{% paginate blog.articles by 10 %}
  <div class="container w-full max-w-screen-xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-8">{{ blog.title }}</h1>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 sm:grid-cols-1 gap-4">
      {% for article in blog.articles %}
        <div class="grid__item">
          <a href="{{ article.url }}" class="card-wrapper  group block">
            <div class="max-w-sm rounded overflow-hidden shadow-lg">
              <div class="h-96 aspect-w-16 aspect-h-9">
              {{ article.image | image_url: width: 900 | image_tag: loading: 'lazy', class: 'object-cover object-top h-full w-full' }}
              </div>
              <div class="px-6 py-4">
                <div class="font-bold text-xl mb-2">{{ article.title }}</div>
                <p class="text-gray-700 text-base">
                  {{ article.excerpt }}
                </p>
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
    <div class="pagination-wrapper pb-5">
      {% render 'pagination', paginate: paginate %}
    </div>
  </div>
{% endpaginate %}
