<footer class="footer">
  <div class="mx-auto w-full max-w-screen-xl p-4 py-6 lg:py-8">
    <div class="flex flex-col md:flex-row justify-between">
      {% for block in section.blocks %}
        {% if block.type == 'text' %}
          <div class="w-full md:w-3/5 mb-6 md:mb-0 md:mr-6">
            <a href="/" class="flex flex-col md:flex-row text-center md:text-left items-center md:items-start">
              <img src="{{ block.settings.image | image_url }}" width="150" height="auto" alt="Logo" loading="lazy" class="mx-auto md:mx-0">
              <p class="text-base sm:text-center text-[#1C1C1C] whitespace-nowrap md:ml-2 md:self-center">
                {{ block.settings.content }}
              </p>
            </a>
          </div>
          
          
        {% endif %}
      {% endfor %}

      <div class="w-full md:w-2/5 sm:gap-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
          {% for block in section.blocks %}
            {% if block.type == 'navigation' %}
              <div>
                <h2 class="mb-2 text-lg font-bold text-[#1C1C1C] uppercase">
                  {{ block.settings.linklist.title }}
                </h2>
                <ul class="text-gray-500 text-gray-400 font-medium">
                  {% for link in block.settings.linklist.links %}
                    <li class="mb-4">
                      <a href="{{ link.url }}" class="text-[#1C1C1C]"> {{ link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
    <hr class="my-6 border-gray-200 sm:mx-auto lg:my-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div class="text-sm text-gray-500 sm:text-center text-gray-400">
        {{ section.settings.copyright }} | By <a href="https://gearepublic.com" class="text-[#1C1C1C]" target="_blank"> VoiceIt</a>
      </div>
      <div>
        {% render 'currency-selector' %}
      </div>
      <div>
        {% render 'language-selector' %}
      </div>
      
      <div class="flex mt-4 sm:justify-center sm:mt-0">
        {% if settings.facebook_link != "" %}
          <a
            href="{{ settings.facebook_link }}"
            class="text-gray-500 hover:text-gray-900"
            target="_blank"
          >
            <svg
              class="w-4 h-4"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="currentColor"
              viewBox="0 0 8 19"
            >
              <path fill-rule="evenodd" d="M6.135 3H8V0H6.135a4.147 4.147 0 0 0-4.142 4.142V6H0v3h2v9.938h3V9h2.021l.592-3H5V3.591A.6.6 0 0 1 5.592 3h.543Z" clip-rule="evenodd"/>
            </svg>
            <span class="sr-only">Facebook page</span>
          </a>
        {% endif %}
        {% if settings.twitter_link != "" %}
          <a
            href="{{ settings.twitter_link }}"
            class="text-gray-500 hover:text-gray-900 ms-5"
            target="_blank"
          >
            <svg
              class="w-4 h-4"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="currentColor"
              viewBox="0 0 20 17"
            >
              <path fill-rule="evenodd" d="M20 1.892a8.178 8.178 0 0 1-2.355.635 4.074 4.074 0 0 0 1.8-2.235 8.344 8.344 0 0 1-2.605.98A4.13 4.13 0 0 0 13.85 0a4.068 4.068 0 0 0-4.1 4.038 4 4 0 0 0 .105.919A11.705 11.705 0 0 1 1.4.734a4.006 4.006 0 0 0 1.268 5.392 4.165 4.165 0 0 1-1.859-.5v.05A4.057 4.057 0 0 0 4.1 9.635a4.19 4.19 0 0 1-1.856.07 4.108 4.108 0 0 0 3.831 2.807A8.36 8.36 0 0 1 0 14.184 11.732 11.732 0 0 0 6.291 16 11.502 11.502 0 0 0 17.964 4.5c0-.177 0-.35-.012-.523A8.143 8.143 0 0 0 20 1.892Z" clip-rule="evenodd"/>
            </svg>
            <span class="sr-only">Twitter page</span>
          </a>
        {% endif %}
        {% if settings.instagram_link != "" %}
          <a
            href="{{ settings.instagram_link }}"
            class="text-gray-500 hover:text-gray-900  ms-5"
            target="_blank"
          >
            <svg
              class="w-4 h-4"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                  d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
            </svg>
            <span class="sr-only">instagram Page</span>
          </a>
        {% endif %}
        {% if settings.linkedin_link != "" %}
          <a
            href="{{ settings.linkedin_link }}"
            class="text-gray-500 hover:text-gray-900  ms-5"
            target="_blank"
          >
            <svg
              class="w-4 h-4"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                  d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z" />
            </svg>
            <span class="sr-only">Linkedin Page</span>
          </a>
        {% endif %}
        {% if settings.youtube_link != "" %}
          <a
            href="{{ settings.youtube_link }}"
            class="text-gray-500 hover:text-gray-900  ms-5"
            target="_blank"
          >
            <svg
              class="w-4 h-4"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                  d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z" />
            </svg>
            <span class="sr-only">Youtube Page</span>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

  <style>
    .footer {
      Background: {{ section.settings.bg }}
    }
  </style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "bg",
      "label": "Footer Background Color"
    },
    {
      "id": "copyright",
      "label": "Copyright Text",
      "type": "text"
    }
  ],
  "max_blocks": 4,
  "blocks": [
    {
      "name": "Text",
      "type": "text",
      "settings": [
        {
          "id": "image",
          "label": "Logo (width = 150px)",
          "type": "image_picker"
        },
        {
          "id": "content",
          "label": "Short Description",
          "type": "richtext"
        }
      ]
    },
    {
      "type": "navigation",
      "name": "Navigation Link",
      "settings": [
        {
          "id": "linklist",
          "label": "Navigation Menu",
          "type": "link_list"
        }
      ]
    }
  ]
}
{% endschema %}
